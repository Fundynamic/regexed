<%= form_for @developer, url: developer_path do |f| %>
  <%= f.error_messages %>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :area %><br />
    <%= f.text_field :area, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :skills %><br />
    <%= f.text_field :skills, class: "form-control", data: { role: "skills" } %>
  </div>
  <div class="form-group">
    <%= f.label :pitch %><br />
    <%= f.text_area :pitch, cols: 75, rows: 4, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :available %><br />
    <%= f.date_field :available, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Opslaan", class: "btn btn-primary form-control" %>
  </div>
<% end %>

<script>
  $(function() {
    $.get("/skills", function( data ) {
      var skills = _.map(data, function(el) {
        return el.name;
      });
      $("[data-role='skills").tokenfield({
        autocomplete: {
          source: skills,
          delay: 100
        }
      });
    });
  });
</script>
