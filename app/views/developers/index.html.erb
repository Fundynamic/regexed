<div class="page-developers">
  <div class="profiel">
    <h3><%= @developer.first_name %> <%= @developer.last_name %></h3>
    <p>
      <%= @developer.pitch %>
    </p>
    <h3>Beschikbaar per</h3>
    <p>
      <%= @developer.available %>
    </p>
    <h3>Skills</h3>
    <p>
      <%= @developer.skills %>
    </p>
    <h3>Likes</h3>
      <% if @developer.can_like? %>
      <p>
        <%= @developer.likes_budget %> likes ter beschikking
      </p>
      <% else %>
      <p>
        Je kunt niet reageren op opdrachten.<br/>
      </p>
      <p>
        <%= link_to "Koop hier 10 likes voor 1 euro", increase_likes_developer_path(@developer), method: :post, class: "button primary" %>
      </p>
      <% end %>
    </p>
  </div>
  <div class="feed">
    <h3>Voor jou relevant</h3>
    <table class="opportunities">
      <thead>
        <tr>
          <th>Titel</th>
          <th>Start</th>
          <th>Einde</th>
          <th>Acties</th>
        </tr>
      </thead>
      <tbody>
    <% @opportunities.each do |opportunity| %>
        <tr class="opportunity">
          <td><%= opportunity.title %></td>
          <td><%= l(opportunity.start_date, format: :datepicker) %></td>
          <td><%= l(opportunity.end_date, format: :datepicker) %></td>
          <td>
            <p>
              <% if @developer.can_like? %>
                <% unless opportunity.liked_by(@developer) %>
                  <%= link_to("Like!", like_opportunity_path(opportunity), method: :post, class: "button secondary") %>
                <% else %>
                  <span class="button ternary bordered">Liked!</span>
                <% end %>
              <% else %>
                <span class="button ternary bordered disabled">Like!</span>
              <% end %>
            </p>
          </td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>
