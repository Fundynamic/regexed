<!DOCTYPE html>
<html>
<head>
  <title>Regexed - Simpel netwerken</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<script>
  $(function() {
    $('.notice').delay(5000).fadeOut(400)
    $('.alert').delay(5000).fadeOut(400)
  });
</script>
<body>

<div class="page-header">
  <ul>
    <% if user_signed_in? %>
      <li>
        <% if current_user.developer? %>
          <%= link_to('Feed', developers_path)  %>
        <% elsif current_user.organisation? %>
          <%= link_to('Feed', organisations_path) %>
        <% end %>
      </li>
      <li>
        <% if current_user.developer? %>
          <%= link_to('Profiel', edit_developer_path(current_user.role_developer)) %>
        <% elsif current_user.organisation? %>
          <%= link_to('Profiel', edit_organisation_path(current_user.role_organisation)) %>
        <% end %>
      </li>
    <% end %>
    <% if user_signed_in? %>
    <li>
      <%= link_to('Uitloggen', destroy_user_session_path, :method => :delete) %>
    <% else %>
      <%= link_to('Inloggen', new_user_session_path, class: "button ternary bordered")  %>
    </li>
    <% end %>
    <li>

    </li>
  </ul>
  <div style="clear: both"></div>
</div>
<div class="centered">
  <% if notice %> <p class="notice"><%= notice %></p> <% end %>
  <% if alert %> <p class="alert"><%= alert %></p><% end %>
</div>

<%= yield %>

</body>
</html>
